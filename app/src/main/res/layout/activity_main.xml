<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="13dp"
        />
    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_home_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="13dp"
        />

    <TextView
        android:id="@+id/smokingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="200dp"
        android:paddingVertical="13dp"
        android:text="Smoking"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@id/home"
        app:layout_constraintLeft_toRightOf="@id/arrow"
        tools:layout_editor_absoluteY="0dp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/cigarette"
        android:layout_margin="20dp"
        android:id="@+id/smokingimage"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:id="@+id/share"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            />
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/line3"
        android:layout_width="3dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintRight_toLeftOf="@id/india"
        android:background="#B31414"
        />
    <TextView
        android:id="@+id/india"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:paddingLeft="10dp"
        android:textSize="30dp"
        android:text="Punjab 1st in India to ban Cigarette"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/news_details"
        app:layout_constraintTop_toBottomOf="@+id/india"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:textSize="18sp"
        />

<View
    android:id="@+id/bottomview"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/black"
    app:layout_constraintLeft_toLeftOf="parent"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Published at 12:00 pm "
        app:layout_constraintTop_toTopOf="@id/bottomview"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@id/bottomview"
        app:layout_constraintBottom_toBottomOf="@id/bottomview"
        android:gravity="center"

        />


</androidx.constraintlayout.widget.ConstraintLayout>